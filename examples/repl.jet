;; repl.jet - a simple repl for Jet.

(define repl
  (lambda ()
    (print ">> ")
    (let ((read-form (read)))
      (if (not (eof-object? read-form))
          (let ((result (eval read-form)))
            (print "==> ")
            (println result)
            (repl))
        (println "bye!")))))

(println "Jet REPL, by Sean Gillespie")
(println "Control+D to exit")
(repl)
